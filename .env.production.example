# Production Environment Configuration Example
# Copy this file to .env for production deployment

# Application URL (your domain)
APP_URL=https://your-domain.com
PORT=3000

# Security - REQUIRED: Generate with: openssl rand -hex 32
APP_SECRET=your-secure-32-character-minimum-secret-here

# JWT Configuration
JWT_TOKEN_EXPIRES_IN=30d

# Database Configuration - REQUIRED
DATABASE_URL="postgresql://raven-docs_user:strong_password_here@localhost:5432/raven-docs?schema=public"

# Redis Configuration - REQUIRED
REDIS_URL=redis://localhost:6379

# Storage Configuration
# Options: local | s3
STORAGE_DRIVER=local

# S3 Configuration (if using S3 storage)
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_ACCESS_KEY=
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=raven-docs-uploads

# Email Configuration (optional but recommended)
MAIL_DRIVER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=Raven Docs

# Optional Features
FILE_UPLOAD_SIZE_LIMIT=50MB
DRAWIO_URL=

# Cloud/Enterprise Features (optional)
CLOUD=false

# Telemetry (helps us improve Raven Docs)
DISABLE_TELEMETRY=false

# Production Recommendations:
# 1. Use strong passwords for database and Redis
# 2. Set up SSL/TLS for PostgreSQL and Redis connections
# 3. Use a reverse proxy (nginx, caddy) with SSL
# 4. Set up proper backup strategies for database and uploaded files
# 5. Monitor application logs and performance